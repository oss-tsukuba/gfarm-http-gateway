#!/bin/sh
set -eu
#set -x

JWT_USER_PATH=${JWT_USER_PATH:-}
if [ -z "$JWT_USER_PATH" ]; then
    uid=`id -u`
    JWT_USER_PATH="/tmp/jwt_user_u${uid}/token.jwt"
fi

token=`cat "$JWT_USER_PATH"`
curl -H "Authorization: Bearer ${token}" "$@"

